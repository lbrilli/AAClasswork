<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user.nil? %>
      <a href="<%=new_session_url%>">Log In</a>
    <% else %>
      <h2><%=@current_user.username%></h2>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
